public class DBConn {
    private static DBConn instance;

    private DBConn() {}

    public static DBConn getInstance() {
        if (instance == null) {
            instance = new DBConn();
        }
        return instance;
    }

    public void connecta() {
        System.out.println("Conecta com o banco de dados!");
    }
    public static void main(String[] args) {
        DBConn conexao1 = DBConn.getInstance();
        DBConn conexao2 = DBConn.getInstance();

        conexao1.connecta();
        System.out.println("São a mesma instância? " + (conexao1 == conexao2));
    }
}
