interface Conexao {
    void conectar();
}

class OracleConexao implements Conexao {
    public void conectar() {
        System.out.println("Conectado ao banco de dados Oracle!");
    }
}

class PostgresConexao implements Conexao {
    public void conectar() {
        System.out.println("Conectado ao banco de dados PostgreSQL!");
    }
}

class MySQLConexao implements Conexao {
    public void conectar() {
        System.out.println("Conectado ao banco de dados MySQL!");
    }
}

class ConexaoFactory {
    public static Conexao criarConexao(String tipo) {
        if (tipo.equalsIgnoreCase("oracle")) {
            return new OracleConexao();
        } else if (tipo.equalsIgnoreCase("postgresql")) {
            return new PostgresConexao();
        } else if (tipo.equalsIgnoreCase("mysql")) {
            return new MySQLConexao();
        } else {
            throw new IllegalArgumentException("Tipo de conexão não suportado: " + tipo);
        }
    }
}

public class Main {
    public static void main(String[] args) {
        Conexao conexao1 = ConexaoFactory.criarConexao("oracle");
        Conexao conexao2 = ConexaoFactory.criarConexao("postgresql");
        Conexao conexao3 = ConexaoFactory.criarConexao("mysql");

        conexao1.conectar();
        conexao2.conectar();
        conexao3.conectar();
    }
}
